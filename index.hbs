{{!< default}}

<div class="wrapper">

  <div class="sidebar">
    <div class="container">

      <div class="header side-item">
        <div class="child">
          <h1 class="blog-title">{{@blog.title}}</h1>
          <h3 class="blog-description">{{@blog.description}}</h3>
        </div>
      </div>

      <div class="work side-item inline">
        <div class="child">
          <h2 class="side-header">Portfolio</h2>
          <ul class="portfolio">
            {{navigation}}
          </ul>
        </div>
      </div>

      <div class="guide side-item inline">
        <div class="child">
          <h2 class="side-header">A <i>good</i> website is:</h2>
          <ul class="keys">
            <li>Fast</li>
            <li>Forward</li>
            <li>Functional</li>
          </ul>
        </div>
      </div>

      <div class="foot side-item last-item">
        <div class="child">
          <h5 class="credit">
              Proudly published with <a href="http://ghost.org" target="_blank">Ghost</a><br>
              Powered by <a href="https://www.digitalocean.com/?refcode=4fc75aaae91e" target="_blank">DigitalOcean</a>
          </h5>
        </div>
      </div>

    </div>
  </div>

  <div class="main">
    <div class="container">
      {{> "loop"}}
      {{pagination}}
    </div>
  </div>

</div>
